<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>


<AnchorPane prefHeight="400.0" prefWidth="600.0" stylesheets="@style.css" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.theopenmoviedatabase.SearchViewController">
   <children>
      <VBox alignment="CENTER" prefHeight="400.0" prefWidth="600.0" spacing="20.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <Label fx:id="headingLabel" text="Search A Movie From Our Database " textFill="WHITE" />
            <HBox prefHeight="281.0" prefWidth="560.0" spacing="20.0">
               <children>
                  <VBox spacing="20.0">
                     <children>
                        <HBox spacing="20.0">
                           <children>
                              <TextField fx:id="searchTextField" prefHeight="25.0" prefWidth="218.0" promptText="Enter Movie Name" />
                              <Button fx:id="searchButton" mnemonicParsing="false" onAction="#searchMovies" prefHeight="25.0" prefWidth="70.0" text="Search" />
                           </children>
                        </HBox>
                        <ListView fx:id="resultView" prefHeight="255.0" prefWidth="201.0" />
                     </children>
                  </VBox>
                  <ImageView fx:id="imageView" fitHeight="300.0" fitWidth="232.0" pickOnBounds="true" preserveRatio="true" />
               </children>
            </HBox>
         </children>
         <padding>
            <Insets bottom="10.0" left="20.0" right="20.0" top="10.0" />
         </padding>
      </VBox>
   </children>
</AnchorPane>
